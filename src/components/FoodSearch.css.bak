.search-section {
  margin-top: 1.5rem;
}

.search-bar {
  display: flex;
  gap: 1rem;
}

.search-input {
  flex: 1;
  padding: 1rem 1.5rem;
  border: 2px solid #e5e5e5;
  border-radius: 50px;
  font-size: 1rem;
  transition: border-color 0.3s;
}

.search-input:focus {
  border-color: #667eea;
}

.search-btn {
  padding: 1rem 2rem;
  border-radius: 50px;
  white-space: nowrap;
}

.results-title {
  color: #333;
  margin-bottom: 1.5rem;
  font-size: 1.3rem;
}

.food-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  gap: 1rem;
}

.food-card {
  background: linear-gradient(135deg, #f8f9ff 0%, #e8eaff 100%);
  padding: 1.5rem;
  border-radius: 12px;
  cursor: pointer;
  transition: all 0.3s;
  border: 2px solid transparent;
}

.food-card:hover {
  transform: translateY(-3px);
  box-shadow: 0 8px 20px rgba(102, 126, 234, 0.3);
  border-color: #667eea;
}

.food-name {
  color: #333;
  font-size: 1.1rem;
  margin-bottom: 0.5rem;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.food-category {
  color: #667eea;
  font-size: 0.9rem;
  margin-bottom: 1rem;
  font-weight: 600;
}

.food-quick-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #666;
  font-weight: 600;
}

.food-arrow {
  color: #667eea;
  font-size: 1.2rem;
}

/* Modal Styles */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 2rem;
  animation: fadeIn 0.3s;
}

.modal-content {
  background: white;
  border-radius: 20px;
  max-width: 800px;
  width: 100%;
  max-height: 90vh;
  overflow-y: auto;
  padding: 2rem;
  position: relative;
  animation: slideUp 0.3s;
}

.modal-close {
  position: absolute;
  top: 1rem;
  right: 1rem;
  background: #f5f5f5;
  border: none;
  width: 40px;
  height: 40px;
  border-radius: 50%;
  font-size: 1.5rem;
  cursor: pointer;
  transition: all 0.3s;
}

.modal-close:hover {
  background: #e5e5e5;
  transform: rotate(90deg);
}

.modal-title {
  color: #333;
  font-size: 1.8rem;
  margin-bottom: 0.5rem;
  padding-right: 3rem;
}

.modal-category {
  color: #667eea;
  font-weight: 600;
  margin-bottom: 1rem;
}

.modal-serving {
  background: #f8f9ff;
  padding: 1rem;
  border-radius: 8px;
  margin-bottom: 2rem;
  color: #333;
}

.nutrients-section h3 {
  color: #333;
  margin-bottom: 1.5rem;
  font-size: 1.3rem;
}

.nutrients-primary {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
  gap: 1rem;
  margin-bottom: 2rem;
}

.nutrient-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 1.5rem;
  border-radius: 12px;
  text-align: center;
}

.nutrient-card.primary {
  background: linear-gradient(135deg, #f39c12 0%, #e67e22 100%);
}

.nutrient-label {
  font-size: 0.9rem;
  opacity: 0.9;
  margin-bottom: 0.5rem;
}

.nutrient-value {
  font-size: 2rem;
  font-weight: bold;
  margin-bottom: 0.2rem;
}

.nutrient-unit {
  font-size: 0.9rem;
  opacity: 0.8;
}

.nutrients-list h4 {
  color: #333;
  margin-bottom: 1rem;
}

.nutrients-table {
  background: #f8f9ff;
  border-radius: 12px;
  overflow: hidden;
}

.nutrient-row {
  display: flex;
  justify-content: space-between;
  padding: 1rem 1.5rem;
  border-bottom: 1px solid #e5e5e5;
}

.nutrient-row:last-child {
  border-bottom: none;
}

.nutrient-name {
  color: #333;
  font-weight: 500;
}

.nutrient-amount {
  color: #667eea;
  font-weight: 600;
}

@media (max-width: 768px) {
  .search-bar {
    flex-direction: column;
  }

  .search-btn {
    width: 100%;
  }

  .food-grid {
    grid-template-columns: 1fr;
  }

  .modal-overlay {
    padding: 1rem;
  }

  .modal-content {
    padding: 1.5rem;
  }

  .nutrients-primary {
    grid-template-columns: repeat(2, 1fr);
  }

  .modal-title {
    font-size: 1.3rem;
  }
}
