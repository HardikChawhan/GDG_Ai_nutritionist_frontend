.tabs {
  display: flex;
  gap: 0.5rem;
  margin-bottom: 2rem;
  border-bottom: 2px solid #f0f0f0;
}

.tab {
  padding: 1rem 2rem;
  background: none;
  border: none;
  border-bottom: 3px solid transparent;
  color: #666;
  font-weight: 600;
  transition: all 0.3s;
}

.tab:hover {
  color: #667eea;
}

.tab.active {
  color: #667eea;
  border-bottom-color: #667eea;
}

.input-section {
  margin-top: 1rem;
}

.input-hint {
  color: #999;
  font-size: 0.9rem;
  margin-top: 0.5rem;
  margin-bottom: 1rem;
}

.coming-soon {
  text-align: center;
  padding: 4rem 2rem;
  color: #999;
}

.coming-soon-icon {
  font-size: 4rem;
  margin-bottom: 1rem;
}

.coming-soon h3 {
  color: #667eea;
  margin-bottom: 0.5rem;
}

.analysis-result {
  margin-top: 2rem;
  animation: slideUp 0.5s ease-out;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.analyzed-foods {
  color: #333;
  margin: 0.5rem 0;
}

.analyzed-time {
  color: #999;
  font-size: 0.9rem;
}

.analysis-content {
  background: #f8f9ff;
  padding: 2rem;
  border-radius: 12px;
  margin: 2rem 0;
  max-height: 500px;
  overflow-y: auto;
}

.analysis-text pre {
  white-space: pre-wrap;
  word-wrap: break-word;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  font-size: 1rem;
  line-height: 1.8;
  color: #333;
  margin: 0;
}

.quick-actions h3 {
  margin-bottom: 1rem;
  color: #333;
}

.action-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 1rem;
}

.action-btn {
  padding: 1rem;
  background: white;
  border: 2px solid #e5e5e5;
  border-radius: 8px;
  color: #667eea;
  font-weight: 600;
  transition: all 0.3s;
  cursor: pointer;
}

.action-btn:hover {
  border-color: #667eea;
  background: #f8f9ff;
  transform: translateY(-2px);
}

.info-card {
  margin-top: 2rem;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.info-card h3 {
  margin-bottom: 1.5rem;
  font-size: 1.5rem;
}

.info-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 1.5rem;
}

.info-item {
  display: flex;
  align-items: start;
  gap: 1rem;
  background: rgba(255, 255, 255, 0.1);
  padding: 1.5rem;
  border-radius: 12px;
  backdrop-filter: blur(10px);
}

.info-icon {
  font-size: 2rem;
  flex-shrink: 0;
}

.info-item h4 {
  margin-bottom: 0.5rem;
  color: white;
}

.info-item p {
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.6;
}

@media print {
  .tabs, .input-section, .quick-actions, .info-card, .navbar, .footer {
    display: none;
  }

  .analysis-content {
    max-height: none;
    box-shadow: none;
  }
}

@media (max-width: 768px) {
  .tabs {
    flex-direction: column;
  }

  .tab {
    border-bottom: none;
    border-left: 3px solid transparent;
  }

  .tab.active {
    border-bottom: none;
    border-left-color: #667eea;
  }

  .action-grid {
    grid-template-columns: 1fr;
  }

  .info-grid {
    grid-template-columns: 1fr;
  }
}
